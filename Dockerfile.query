# -----------------------------
# Single-stage Dockerfile for ETL Service
# -----------------------------
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install system dependencies for PyTorch, LangChain, and other libs
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    g++ \
    libc-dev \
    libjpeg-dev \
    zlib1g-dev \
    cmake \
    && rm -rf /var/lib/apt/lists/*


RUN apt-get update && apt-get install -y curl

# Upgrade pip to the latest version
RUN pip install --no-cache-dir --upgrade pip

# Install typing_extensions first to avoid Uvicorn/FastAPI issues
RUN pip install --no-cache-dir typing_extensions>=4.7.0

# Copy requirements file
COPY requirements-query.txt .

# Install PyTorch CPU-only first (pinned versions for compatibility)
RUN pip install --no-cache-dir \
    torch==2.7.1 \
    torchvision==0.22.1 \
    torchaudio==2.7.1 \
    --index-url https://download.pytorch.org/whl/cpu

# Install the remaining dependencies
RUN pip install --no-cache-dir -r requirements-query.txt

# Copy application files
COPY query_engine.py .

# Expose FastAPI Query Engine port
EXPOSE 8002

# Start FastAPI app with Uvicorn
CMD ["uvicorn", "query_engine:app", "--host", "0.0.0.0", "--port", "8002"]
